# =============================================================================
# WHISPER APP ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit your .env file to version control!

# =============================================================================
# TOGETHER AI - For Whisper transcription and LLM transformations
# =============================================================================
# Get your API key from: https://api.together.xyz/settings/api-keys
TOGETHER_API_KEY=your_together_api_key_here

# =============================================================================
# HELICONE (Optional) - For LLM observability and monitoring
# =============================================================================
# Get your API key from: https://helicone.ai
# Leave empty if you don't want to use Helicone
HELICONE_API_KEY=

# =============================================================================
# CLERK - For user authentication
# =============================================================================
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Redirect URLs after sign in/up
NEXT_PUBLIC_CLERK_SIGN_IN_FORCE_REDIRECT_URL=/whispers
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/whispers

# =============================================================================
# BACKBLAZE B2 - For audio file storage (S3-compatible)
# =============================================================================
# Create a bucket and application key at: https://www.backblaze.com/b2/cloud-storage.html
# Note: This uses S3-compatible API
S3_UPLOAD_KEY=your_b2_application_key_id_here
S3_UPLOAD_SECRET=your_b2_application_key_here
S3_UPLOAD_BUCKET=your-bucket-name
S3_UPLOAD_REGION=us-west-002

# =============================================================================
# UPSTASH REDIS - For rate limiting
# =============================================================================
# Create a database at: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# =============================================================================
# TURSO - For SQLite database (libSQL)
# =============================================================================
# Create a database at: https://turso.tech
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# =============================================================================
# PRISMA - For local development
# =============================================================================
# This points to a local SQLite file for Prisma migrations
DATABASE_URL=file:./dev.db

# =============================================================================
# RAILWAY (Optional) - Deployment platform variables
# =============================================================================
# These are automatically set by Railway when you deploy
# You don't need to set these locally
RAILWAY_PROJECT_NAME=
RAILWAY_ENVIRONMENT_NAME=
RAILWAY_SERVICE_NAME=
RAILWAY_PROJECT_ID=
RAILWAY_ENVIRONMENT_ID=
RAILWAY_SERVICE_ID=

# =============================================================================
# APPLICATION - Your production domain
# =============================================================================
# Used for CORS configuration and other production settings
NEXT_PUBLIC_APP_URL=https://your-domain.com
